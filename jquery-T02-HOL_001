Javascript file:

function add_two_numbers() {
    if ($("#val1").val() == "" || $("#val2").val() == "") {
        $("#error").html("Pls.enter the Values");
    }
    else {
        $("#error").empty();
        $("#ans").val(parseInt($("#val1").val()) + parseInt($("#val2").val()));
    }
}
